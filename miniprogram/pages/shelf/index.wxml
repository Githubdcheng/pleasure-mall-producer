<!--pages/shelf/index.wxml-->
<view class="page__bd">
  <wux-prompt visible="{{inventories.length === 0}}" title="{{ msg.title }}" text="{{ msg.text }}" buttons="{{ msg.buttons }}" bind:click="buttonClicked" />
  <scroll-view style="height:calc(100vh - 50px)" scroll-y scroll-with-animation>
  <van-card class="solid margin" tag="{{item.level}}" num="{{item.inventory}}" price="{{item.price}}" title="{{item.name}}" thumb="{{item.img}}" wx:for="{{inventories}}" wx:key>
    <view slot="footer">
      <van-button data-id="{{item.id}}" size="mini">修改</van-button>
      <van-button data-id="{{item.id}}" size="mini">删除</van-button>
    </view>
  </van-card>
  </scroll-view>
</view>