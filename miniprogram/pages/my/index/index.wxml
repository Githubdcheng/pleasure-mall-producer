<!--miniprogram/pages/account/account.wxml-->
<view class="page">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">个人信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">姓名：</view>
        <view class="weui-cell__ft">
          <block wx:if="{{userInfo.name}}">{{userInfo.name}}</block>
          <block wx:else>
            <button class="weui-btn mini-btn" type="primary" size="mini">添加</button>
          </block>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">手机号：</view>
        <view class="weui-cell__ft">
          <block wx:if="{{userInfo.phoneNumber}}">{{userInfo.phoneNumber}}</block>
          <block wx:else>
            <button class="weui-btn mini-btn" type="primary" size="mini">添加</button>
          </block>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">地址：</view>
        <view class="weui-cell__ft">
          <block wx:if="{{userInfo.address}}">{{userInfo.address}}</block>
          <block wx:else>
            <button class="weui-btn mini-btn" type="primary" size="mini">添加</button>
          </block>
        </view>
      </view>
    </view>
  </view>
</view>